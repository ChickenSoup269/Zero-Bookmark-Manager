{
  "manifest_version": 3,
  "name": "Zero Bookmark Manager",
  "version": "1.1.8",
  "description": "A sleek and intuitive Chrome extension to manage bookmarks with search, sort, folder management, and export/import features.",
  "permissions": [
    "bookmarks",
    "storage",
    "sidePanel",
    "tabs",
    "system.display",
    "webNavigation"
  ],
  "action": {},
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "128": "icons/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "fonts/*.ttf",
        "fonts/*.woff2",
        "images/*.png",
        "images/*.jpg",
        "bookmarks.html",
        "components/sidepanel/sidepanel.html"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
